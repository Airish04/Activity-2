@{
	ViewData["Title"] = "Write";
}

@model Activity_2.Models.Library

<div class="text-center">
	<h1 class="display-4">Write an Entry</h1>
	<p>Share your creativity with the world.</p>
</div>

<form asp-action="WriteForm" asp-asp-controller="Home">
	<div class="mb-3">
		<label for="title" class="form-label">Title</label>
		<input type="text" class="form-control" id="Title" name="title" placeholder="Enter the title of your work" required>
	</div>
	<div class="mb-3">
		<label for="content" class="form-label">Content</label>
		<textarea class="form-control" id="content" name="Content" rows="5" placeholder="Write your poem or story here..." required></textarea>
	</div>
	<button type="submit" class="btn btn-success">Submit</button>
</form>